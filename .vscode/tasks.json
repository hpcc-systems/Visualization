{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "watch",
            "args": [
                "run",
                "watch"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "build-es6",
            "args": [
                "run",
                "build-es6"
            ]
        },
        {
            "taskName": "bundle",
            "args": [
                "run",
                "bundle"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "run",
                "test"
            ]
        }
    ]
}