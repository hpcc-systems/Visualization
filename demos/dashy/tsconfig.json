{
    "compilerOptions": {
        "outDir": "./lib-umd",
        "target": "es5",
        "module": "umd",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "importHelpers": false,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2015.iterable"
        ],
        "types": []
    },
    "include": [
        "./src/**/*"
    ],
    "references": [
        {
            "path": "../../packages/common/"
        },
        {
            "path": "../../packages/comms/"
        },
        {
            "path": "../../packages/graph/"
        },
        {
            "path": "../../packages/marshaller/"
        },
        {
            "path": "../../packages/other/"
        },
        {
            "path": "../../packages/util/"
        }
    ]
}