{
    "compilerOptions": {
        "outDir": "./src-umd",
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "allowJs": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "types": []
    },
    "include": [
        "src/**/*",
        "samples/**/*"
    ]
}