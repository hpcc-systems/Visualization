{
  "name": "@hpcc-js/codemirror",
  "version": "0.0.82",
  "description": "hpcc-js - Viz Code Mirror",
  "main": "dist/index.js",
  "module": "dist/index.es6",
  "unpkg": "dist/index.min.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/*",
    "types/*",
    "src/*.css"
  ],
  "scripts": {
    "clean": "rimraf lib* && rimraf types && rimraf dist",
    "compile-es6": "tsc --module es6 --outDir ./lib-es6",
    "compile-umd": "tsc --module umd --outDir ./lib-umd",
    "bundle": "rollup -c",
    "bundle-watch": "npm run bundle -- -w",
    "minimize": "uglifyjs dist/index.js -c -m --source-map  -o dist/index.min.js",
    "build": "npm run compile-es6 && npm run bundle",
    "watch": "concurrently --kill-others \"npm run compile-watch\" \"npm run bundle-watch\"",
    "lint": "tslint --project . src/**/*.ts",
    "docs": "typedoc --options tdoptions.json ."
  },
  "dependencies": {
    "@hpcc-js/common": "^0.0.68",
    "@hpcc-js/dgrid": "^0.0.79",
    "@hpcc-js/html": "^0.0.68",
    "@hpcc-js/phosphor": "^0.0.71",
    "@hpcc-js/util": "^0.0.66"
  },
  "devDependencies": {
    "@hpcc-js/codemirror-shim": "^0.0.55",
    "concurrently": "3.5.0",
    "rimraf": "2.6.2",
    "rollup": "0.54.0",
    "rollup-plugin-postcss": "0.5.5",
    "tslib": "1.8.0",
    "tslint": "5.8.0",
    "typedoc": "0.7.1",
    "typescript": "2.6.1",
    "uglify-es": "3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpcc-systems/Visualization.git"
  },
  "author": "Gordon Smith <gordonjsmith@gmail.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hpcc-systems/Visualization/issues"
  },
  "homepage": "https://github.com/hpcc-systems/Visualization"
}