        "declaration": true,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es5",
        "outDir": "./lib",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "types": []
    },
    "include": [
        "src/**/*"
    ]
}