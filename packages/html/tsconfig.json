{
    "compilerOptions": {
        "outDir": "./lib-umd",
        "target": "es5",
        "module": "umd",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "JSXWidget.createElement",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "types": []
    },
    "include": [
        "src/**/*"
    ]
}