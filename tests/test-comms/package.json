{
    "private": true,
    "name": "@hpcc-js/test-comms",
    "dependencies": {
        "@hpcc-js/comms": "^2.81.0",
        "@hpcc-js/util": "^2.50.1",
        "es6-promise": "4.2.8"
    },
    "devDependencies": {
        "@types/mocha": "5.2.7",
        "file-loader": "6.2.0"
    },
    "scripts": {
        "clean": "rimraf lib* types dist *.tsbuildinfo",
        "compile-es6": "tsc --module es6 --outDir ./lib-es6",
        "compile-es6-watch": "npm run compile-es6 -- -w",
        "compile-umd": "tsc --module umd --outDir ./lib-umd",
        "compile-umd-watch": "npm run compile-umd -- -w",
        "bundle": "webpack",
        "bundle-watch": "npm run bundle -- --watch",
        "watch": "npm-run-all compile-es6 -p compile-es6-watch bundle-watch",
        "build": "npm run compile-es6 && npm run compile-umd && npm run bundle",
        "test": "npm run test:node",
        "test:node": "mocha lib-umd/index.node.spec.js --exit --reporter spec",
        "test:chrome": "mocha-headless-chrome -f ./test.html",
        "update": "npx --yes npm-check-updates -u -t minor"
    }
}