{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./lib-umd",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "lib": [
      "dom",
      "ES2017"
    ],
    "types": [
      "chai",
      "mocha"
    ]
  },
  "include": [
    "src/*"
  ]
}